<div class="container p-2 my-4" style="height:77vh;overflow:auto;">
  <% if (applicants.length > 0) { %>
    <table class="table table-dark h-100 text-center">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Contact</th>
          <th scope="col">Resume</th>
        </tr>
      </thead>
      <tbody>
        <% applicants.map((applicant, index) => { %>
          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><%= applicant.name %></td>
            <td><%= applicant.email %></td>
            <td><%= applicant.contact %></td>
            <td><a href="/<%= applicant.resumepath %>" class="btn btn-primary" target="_blank" rel="noopener noreferrer">VIEW</a></td>

        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <div class="container-fluid d-flex justify-content-center align-items-center" style="height: 85vh;">
      <div class="alert alert-warning text-center mt-5 w-100" role="alert">
        No Applicants found.
    </div>
    </div>
  <% } %>
</div>
